<%-  include('layout/header') %>

<div class="=container">
    <div class="=row">
        <form action="/add" method="Post" enctype="multipart/form-data">
            <div class="group">
                <h3>Add new items</h3>
            </div>
            <div class="group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" class="control" placeholder="Book title" required>
            </div>
            <div class="group">
                <label for="title">Authors Name</label>
                <input type="text" name="author" id="author" class="control" placeholder="Authors name" required>
            </div>
            <div class="group">
                <label for="title">Genre</label>
                <input type="text" name="genre" id="author" class="control" placeholder="Genre" required>
            </div>
            <div class="group">
                <label for="body">Body</label>
                <textarea name="body" id="body" class="control" cols="30" rows="10" required></textarea>
            </div>
            <div class="group">
                <label for="imageLabel" class="fileLabel">Upload image</label>
                <input type="file" name="image" id="imageLabel">
            </div>
            <div class="group">
                <input type="submit" value="Add Book " class="btn btn-sweet">
            </div>
        </form>
    </div>
</div>




<%-  include('layout/footer') %>

    