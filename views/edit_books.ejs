<%-  include('layout/header') %>

<div class="=container">
    <div class="=row">
        <form action="/update/<%= books._id%>" method="Post" enctype="multipart/form-data">
            <div class="group">
                <h3>Edit Book Details (<%= books.title%>)</h3>
            </div>
            <div class="group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" class="control" placeholder="Book title" value="<%= books.title%>" required>
            </div>
            <div class="group">
                <label for="title">Authors Name</label>
                <input type="text" name="author" id="author" class="control" placeholder="Authors name" value="<%= books.authorname%>" required>
            </div>
            <div class="group">
                <label for="title">Genre</label>
                <input type="text" name="genre" id="author" class="control" placeholder="Genre"  value="<%= books.genre%>"  required>
            </div>
            <div class="group">
                <label for="body">Body</label>
                <textarea name="body" id="body" class="control" cols="30" rows="10" required></textarea>
            </div>
            <div class="group">
                <label for="imageLabel" class="fileLabel">Upload image</label>
                <input type="file" name="image" id="imageLabel" />
                <img src="/<%= books.Image%>" width="100" class="img-thumbnail mt-1" />
            </div>
            <input type="hidden" name="old_image" value="<%= books.Image%>"
            <div class="group">
                <input type="submit" value="Add Book " class="btn btn-sweet">
            </div>
        </form>
    </div>
</div>




<%-  include('layout/footer') %>

    